{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "${name}",
      "wrap": true,
      "size": "Large"
    },
    {
      "type": "TextBlock",
      "text": "${description}",
      "wrap": true,
      "size": "Medium"
    }
  ],
  "actions": [
    {
        "type": "Action.OpenUrl",
        "title": "Handoff to Bot",
        "url": "${handoffUrl}"
    }                                    
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}