{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4",
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "data:image/png;base64,",
                                    "altText": "Teams Copilot Starter Banner",
                                    "horizontalAlignment": "Left"
                                }
                            ]
                        }
                    ]
                }
            ],
            "bleed": true,
            "verticalContentAlignment": "Center"
        },
        {
            "type": "Container",
            "$data": "${prompt}",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${request}",
                    "color": "Dark",
                    "weight": "Bolder",
                    "style": "heading"
                }
            ]
        },
        {
            "type": "Container",
            "$data": "${prompt}",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${response}",
                    "wrap": true,
                    "color": "Dark"
                }
            ],
            "separator": true,
            "spacing": "Medium",
            "verticalContentAlignment": "Center"
        }
    ],
    "msteams": {
        "width": "Full"
    }    
}